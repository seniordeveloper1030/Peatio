<!DOCTYPE html>
<html lang="en" ng-app="funds">
<head>
  <%= render 'shared/meta' %>
  <%= render 'shared/sentry' %>
  <%= csrf_meta_tags %>

  <link href="/favicon.ico" rel="shortcut icon"/>
  <% stylesheet = content_for?(:stylesheet) ? yield(:stylesheet) : 'application' %>
  <%= stylesheet_link_tag stylesheet, media: 'all' %>
  <%= render 'shared/theme' %>
  <%= custom_stylesheet_link_tag_for :main %>

  <%= include_gon %>
  <%= render 'shared/html5' %>
  <%= javascript_include_tag "locales/#{I18n.locale}" %>
  <%= javascript_include_tag 'funds' %>
  <%= yield(:scripts) if content_for?(:scripts) %>
</head>

<body id="<%= body_id %>" data-lang="<%= "#{locale_name}" %>">

<div id="wrap" class="welcome-background">
  <%- if content_for?(:header) %>
    <%= yield(:header) %>
  <%- else %>
    <%= render 'shared/header' %>
  <%- end %>

      <div class="funs_detail">
        <div class='container-fluid p-5'>
          <%= yield %>
        </div>
      </div>


  <div id="push"></div>
</div>

<%- if content_for?(:footer) %>
  <%= yield(:footer) %>
<%- end %>

</body>
</html>

